 // Helper function to count how many students are needed
    int countStudents(vector<int> &arr, int pages) {
        int students = 1;
        int pagesStudent = 0;
        for (int i = 0; i < arr.size(); i++) {
            if (arr[i] > pages) return INT_MAX; // can't assign this book
            if (pagesStudent + arr[i] <= pages) {
                pagesStudent += arr[i];
            } else {
                students++;
                pagesStudent = arr[i];
            }
        }
        return students;
    }

    // Main function to find minimum number of pages
    int findPages(vector<int> &arr, int k) {
        int n = arr.size();
        if (k > n) return -1; // not enough books

        int low = *max_element(arr.begin(), arr.end());
        int high = accumulate(arr.begin(), arr.end(), 0);
        int ans = -1;

        while (low <= high) {
            int mid = (low + high) / 2;
            int students = countStudents(arr, mid);
            if (students > k) {
                low = mid + 1;
            } else {
                ans = mid;
                high = mid - 1;
            }
        }
        return ans;
    }
